/* pages/project/index.wxss */

.page-head{
  position: relative;
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 0;
}

.page-head-bg{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  height: 50%;
  width: 100%;
  z-index: 0;
}

.page-head-content{
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 85%;
  height: 160rpx;
  padding: 5rpx 15rpx;
  z-index: 1;
  background: white;
}

.page-head-content-bg{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.balance-area{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  margin-bottom: 10rpx;
}

.balance-title{
  z-index: 2;
  font-size: 30rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.balance-value-box{
  flex-grow: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.balance-value{
  z-index: 2;
  font-size: 36rpx;
  font-weight: bold;
  color: #0ba6e9;
}

.balance-unit{
  z-index: 2;
  font-size: 26rpx;
}

.detail-box{
  z-index: 2;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right: 10rpx;
  padding: 10rpx 0rpx;
}

.detail-title{
  border-right: 1rpx solid lightgray;
  font-size: 26rpx;
  color: #0ba6e9;
  margin-left: 10rpx;
  padding-right: 10rpx;
}

.recharge-box{
  flex-shrink: 0;
  justify-self: flex-end;
  z-index: 2;
  display: flex;
  flex-direction: row;
  padding: 10rpx 15rpx;
  align-items: center;
  height: 40rpx;
  border-radius: 8rpx;
  background: #0ba6e9;
}

.recharge-title{
  font-size: 30rpx;
  color: white;
}

.page-head-info{
  width: 100%;
  align-items: center;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  z-index:2;
}

.expire{
  background: rgb(238, 238, 238);
  color: gray;
  font-size: 24rpx;
  padding: 5rpx 10rpx;
}

.info{
  color: #ee2c2c;
  font-size: 24rpx;
}

.project-item{
  width: 90%;
  margin: 20rpx auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 8rpx;
  border: 1rpx solid lightgray;
}

.project-item-left{
  margin: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex-grow: 1;
}

.project-item-name{
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.project-item-description{
  font-size: 28rpx;
  color: lightgray;
  margin-bottom: 10rpx;
}

.project-item-splic-line{
  border-bottom: 2rpx dashed lightgray;
  margin-bottom: 10rpx;
}

.project-item-expire{
  font-size: 28rpx;
  color: gray;
}

.project-item-right{
  margin: 20rpx;
  margin-left: 0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.project-order-button{
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  line-height: 120rpx;
  font-size: 35rpx;
  color: white;
  text-align: center;
}