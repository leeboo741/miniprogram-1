/* pages/personal/qrCode/index.wxss */
.page-box{
  width: 100vw;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 0;
}

.page-head{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
}

.page-head-bg{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  height: 50%;
  width: 100%;
  z-index: 1;
}

.page-head-content{
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 85%;
  height: 120rpx;
  padding: 5rpx 15rpx;
  z-index: 2;
  background: white;
}

.page-head-content-bg{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  z-index: 2;
}

.balance-title{
  z-index: 3;
  font-size: 30rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.balance-value-box{
  flex-grow: 3;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.balance-value{
  z-index: 3;
  font-size: 36rpx;
  font-weight: bold;
  color: #ee2c2c;
}

.balance-unit{
  z-index: 3;
  font-size: 26rpx;
}

.recharge-box{
  flex-shrink: 0;
  justify-self: flex-end;
  z-index: 3;
  display: flex;
  flex-direction: row;
  padding: 10rpx 25rpx;
  align-items: center;
  height: 30rpx;
  border-radius: 25rpx;
  background: #ee2c2c;
}

.recharge-title{
  font-size: 30rpx;
  color: white;
  z-index: 3;
}

.page-content{
  margin-top: 160rpx;
  margin-bottom: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.qrcode-box{
  /* margin: 200rpx auto; */
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.code-title{
  font-size: 32rpx;
  color: #778899;
  margin-top: 50rpx;
}

.page-foot{
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 120rpx;
  z-index: 10;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.foot-button{
  width: 80%;
  height: 100rpx;
  border-radius: 50rpx;
  text-align: center;
  font-size: 36rpx;
  background: #acce00;
  color: white;
  line-height: 100rpx;
}