/* pages/balance/balanceRecharge/index.wxss */
.page-head{
  position: relative;
  width: 100%;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 0;
}

.page-head-bg{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  height: 50%;
  width: 100%;
  z-index: 0;
}

.page-head-content{
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 85%;
  height: 120rpx;
  padding: 5rpx 15rpx;
  z-index: 1;
  background: white;
}

.page-head-content-bg{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.balance-title{
  z-index: 2;
  font-size: 30rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.balance-value-box{
  flex-grow: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.balance-value{
  z-index: 2;
  font-size: 36rpx;
  font-weight: bold;
  color: #ee2c2c;
}

.balance-unit{
  z-index: 2;
  font-size: 26rpx;
}

.bind-box{
  flex-shrink: 0;
  justify-self: flex-end;
  z-index: 2;
  display: flex;
  flex-direction: row;
  padding: 10rpx 15rpx;
  align-items: center;
  height: 40rpx;
  border-radius: 30rpx;
  background: #ee2c2c;
}

.bind-icon{
  width: 40rpx;
  height: 40rpx;
}

.bind-title{
  font-size: 30rpx;
  color: white;
  margin-left: 10rpx;
}

.input-box{
  width: 90%;
  height: 100rpx;
  border-width: 1rpx;
  border-style: solid;
  border-color: lightgray;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20rpx auto;
}

.input{
  width: 90%;
  height: 80%;
  font-size: 32rpx;
}

.input-normal{
  color: black;
  font-weight: bold;
}

.input-placeholder{
  color: lightgray;
  font-weight: normal;
}

.static-value-box{
  width: 90%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  margin: 20rpx auto;
}

.static-value-item{
  width: 30%;
  height: 140rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-style: solid;
  border-width: 1rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.static-value-item-selected{
  border-color: #ee2c2c;
  background: #ee2c2c;
}

.static-value-item-normal{
  border-color: lightgray;
  background: white;
}

.static-value{
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}

.static-value-title{
  font-size: 34rpx;
  font-weight: bold;
}

.static-value-title-selected{
  color: white;
}

.static-value-title-normal{
  color: #ee2c2c;
}

.static-value-unit{
  font-size: 28rpx;
}

.static-value-value-selected{
  color: white;
}

.static-value-value-normal{
  color: gray;
}

.confirm-recharge-button{
  text-align: center;
  width: 90%;
  height: 80rpx;
  background: #ee2c2c;
  color: white;
  font-size: 32rpx;
  border-radius: 8rpx;
  line-height: 80rpx;
  margin: 20rpx auto;
}

.promotion-box{
  margin: 60rpx auto;
  position: relative;
  width: 90%;
  border: 1rpx solid lightgray;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.promotion-title{
  background: white;
  padding: 10rpx 30rpx;
  height: 40rpx;
  font-size: 35rpx;
  font-weight: bold;
  position: absolute;
  top: -40rpx;
  left: 30rpx;
}

.promotion-item{
  width: 90%;
  margin: 30rpx 0rpx 20rpx 0rpx;
  display: flex;
  flex-direction: column;
}

.promotion-item-title{
  font-size: 32rpx;
  font-weight: bold;
  color: gray;
  padding: 0rpx 10rpx;
}

.promotion-item-splice-line{
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  border-bottom: 2rpx dashed lightgray;

}

.promotion-item-description-title{
  font-size: 28rpx;
  color: gray;
  padding: 0rpx 10rpx;
}

.promotion-item-description{
  font-size: 28rpx;
  color: gray;
  padding: 0rpx 10rpx;
}