/* pages/coupon/receiveCoupon/index.wxss */
.content{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.coupon-item{
  display: flex;
  flex-direction: row;
  width: 96%;
  align-content: center;
  position: relative;
  height: 200rpx;
  margin: 20rpx auto;
}

.coupon-item-bg{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  height: 200rpx;
  width: 100%;
  z-index: 0;
}

.coupon-item-left{
  width: 28%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
  z-index: 1;
}

.coupon-item-value-box{
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  color: white;
}

.coupon-item-unit{
  font-size: 28rpx;
}

.coupon-item-value{
  font-size: 36rpx;
}

.coupon-item-type-box{
  margin-top: 10rpx;
  position: relative;
  width: 70%;
  height: 50rpx;
}

.coupon-item-type-bg{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0rpx;
  left: 0rpx;
}

.coupon-item-type-title{
  position: absolute;
  top: 5rpx;
  left: 0rpx;
  text-align: center;
  font-size: 26rpx;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
}

.coupon-item-right{
  z-index: 1;
  flex-grow: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.coupon-item-info{
  width: 90%;
  height: 85%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.coupon-item-name{
  font-size: 34rpx;
  font-weight: bold;
}

.coupon-item-description{
  font-size: 26rpx;
  color: lightgray;
}

.coupon-item-splice-line{
  border-bottom: 2rpx dashed lightgray;
}

.coupon-item-time-area{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.coupon-item-time{
  font-size: 22rpx;
}

.coupon-item-button{
  padding: 5rpx 15rpx;
  background: #eb503c;
  color: white;
  font-size: 22rpx;
  height: 40rpx;
  border-radius: 20rpx;
  line-height: 40rpx;
  width: 100rpx;
  text-align: center;
}

.load-bottom{
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100rpx;
}

.load-bottom-line{
  border-bottom: 2rpx solid #778899;
  width: 90%;
}

.load-bottom-content-box{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0rpx;
  left: 0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.load-bottom-content{
  padding: 20rpx 40rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
  background: white;
}

.load-more-title{
  font-size: 32rpx;
  color: #778899;
}
