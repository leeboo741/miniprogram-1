/* pages/coupon/couponList/index.wxss */
.page-box{
  width: 100vw;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.page-head{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 140rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.page-head-bg{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  height: 50%;
  width: 100%;
}

.page-head-tabs{
  width: 90%;
}

.page-content-list{
  margin-top: 140rpx;
  margin-bottom: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.coupon-item{
  display: flex;
  flex-direction: row;
  width: 96%;
  align-content: center;
  position: relative;
  height: 200rpx;
  margin: 20rpx auto;
}

.coupon-item-bg{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  height: 200rpx;
  width: 100%;
  z-index: 0;
}

.coupon-item-left{
  width: 28%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
  z-index: 1;
}

.coupon-item-value-box{
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  color: white;
}

.coupon-item-unit{
  font-size: 28rpx;
}

.coupon-item-value{
  font-size: 36rpx;
}

.coupon-item-type-box{
  margin-top: 10rpx;
  position: relative;
  width: 70%;
  height: 50rpx;
}

.coupon-item-type-bg{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0rpx;
  left: 0rpx;
}

.coupon-item-type-title{
  position: absolute;
  top: 5rpx;
  left: 0rpx;
  text-align: center;
  font-size: 26rpx;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
}

.coupon-item-right{
  z-index: 1;
  flex-grow: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.coupon-item-info{
  width: 90%;
  height: 85%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.coupon-item-name{
  font-size: 34rpx;
  font-weight: bold;
}

.coupon-item-description{
  font-size: 26rpx;
  color: lightgray;
}

.coupon-item-splice-line{
  border-bottom: 2rpx dashed lightgray;
}

.coupon-item-time-area{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.coupon-item-time{
  font-size: 22rpx;
}

.coupon-item-button{
  padding: 5rpx 15rpx;
  background: #eb503c;
  color: white;
  font-size: 26rpx;
  height: 40rpx;
  border-radius: 20rpx;
  line-height: 40rpx;
}

.coupon-item-stamp{
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  width: 120rpx;
  height: 120rpx;
  z-index: 3;
}

.empty-view{
  height: 400rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 140rpx;
}

.empty-content{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.empty-logo{
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 30rpx;
}

.empty-title{
  font-size: 32rpx;
  color: lightgray;
  margin-bottom: 30rpx;
}

.receive-coupon-button{
  height: 50rpx;
  border-radius: 25rpx;
  width: 130rpx;
  font-size: 30rpx;
  text-align: center;
  line-height: 50rpx;
  color: white;
  background: #eb503c;
}

.page-foot{
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 120rpx;
  z-index: 10;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.foot-button{
  width: 80%;
  height: 100rpx;
  border-radius: 50rpx;
  text-align: center;
  font-size: 36rpx;
  background: #acce00;
  color: white;
  line-height: 100rpx;
}